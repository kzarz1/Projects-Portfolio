<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/nightsky"
    android:orientation="vertical"
    tools:context=".DirectionsActivity">


<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:padding="24dp"-->
<!--        android:text="@string/app_name" />-->

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#D1C4E9"
        android:textColor="#673AB7"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/californian_fb"
        android:text="Welcome, User!"
        android:textSize="32dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/north_button"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#673AB7"

            android:fontFamily="@font/californian_fb"
            android:padding="12dp"
            android:layout_margin="50dp"
            android:textSize="24dp"
            android:text="@string/north"/>

        <Button
            android:id="@+id/south_button"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#673AB7"

            android:fontFamily="@font/californian_fb"
            android:padding="12dp"
            android:layout_margin="50dp"
            android:textSize="24dp"
            android:text="@string/south" />

        <Button
            android:id="@+id/viewFavorites_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#673AB7"

            android:fontFamily="@font/californian_fb"
            android:padding="12dp"
            android:layout_margin="50dp"
            android:textSize="24dp"
            android:text="View Favorited Stars"
            />

    </LinearLayout>

</LinearLayout>